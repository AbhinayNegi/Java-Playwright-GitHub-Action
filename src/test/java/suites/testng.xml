<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="PlaywrightAutomationSuite" verbose="1" parallel="classes" thread-count="3">

    <!-- Test parameters -->
    <parameter name="browser" value="chromium"/>
    <parameter name="headless" value="true"/>
    <parameter name="baseUrl" value="https://playwright.dev"/>

    <!-- Listeners -->
    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>

    <!-- Smoke Test Suite -->
    <test name="SmokeTests" group-by-instances="true">
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <classes>
            <class name="tests.HomePageTest"/>
        </classes>
    </test>

    <!-- Regression Test Suite -->
    <test name="RegressionTests" group-by-instances="true">
        <groups>
            <run>
                <include name="regression"/>
            </run>
        </groups>
        <classes>
            <class name="tests.HomePageTest"/>
        </classes>
    </test>

    <!-- All Tests -->
    <test name="AllTests" group-by-instances="true">
        <classes>
            <class name="tests.HomePageTest"/>
        </classes>
    </test>

</suite>